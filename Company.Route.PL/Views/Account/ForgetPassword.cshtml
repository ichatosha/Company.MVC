@using Company.Route.PL.ViewModels
@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout1.cshtml";
}

<h1>Forget Password</h1>

<div class="main-agileinfo">
	<div asp-validation-summary="All">
	</div>
	<div class="agileits-top">

		<form asp-action="SendResetPasswordUrl">

			<input type="email" asp-for="Email" placeholder="Email">
			
			<input type="submit" value="Reset Password">
		</form>
		<p>Don't have an Account? <a asp-action="SignUp">Register Now!</a></p>
	</div>
</div>