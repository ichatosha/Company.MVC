@using Company.Route.PL.ViewModels
@model SignInViewModel 


@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout1.cshtml";
}



<div class="main-agileinfo">
	<div asp-validation-summary="All">

	</div>
	<div class="agileits-top">
		<form asp-action="SignIn" >
			<input type="email" asp-for="Email" placeholder="Email">
			<input type="password" asp-for="Password" placeholder="Password">
			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" asp-for="RememberMe" class="checkbox">
					<span>Remember Me</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNIN">
		</form>
		<p>Don't have an Account? <a asp-action="SignUp">Register Now!</a></p>
		<p><a asp-action="ForgetPassword">Forget Password ?</a></p>
	</div>
</div>