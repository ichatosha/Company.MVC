@using Company.Route.PL.ViewModels
@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>
    All Users
</h1>
<br />
<br />

<form asp-action="Index">
    <div class="row m-5">
        <div class="col-8">
            <input type="text" name="WordSearch" id="WordSearch" placeholder="Seach By Name..." class="form-control" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search"  class="btn btn-success" />
        </div>
    </div>

</form>




@if(Model.Count() > 0 )
{
    <br />
    <table class="table table-striped table-hover">
        <thead>
        <th>@Html.DisplayNameFor(D => D.Id)</th>
        <th>@Html.DisplayNameFor(D => D.FirstName)</th>
        <th>@Html.DisplayNameFor(D => D.LastName)</th>
        <th>@Html.DisplayNameFor(D => D.Email)</th>
        <th>@Html.DisplayNameFor(D => D.Roles)</th>
        <th>Details</th>
        <th>Update</th>
        <th>Delete</th>
        </thead>

        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@string.Join(" ", user.Roles)</td>
                    <partial name="UserPartialViews/_ButtonsPartialView" model="@user.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <br />
    <div class="alert alert-danger">
        <h3>
            There are no Users!
        </h3>
    </div>
}


