@using Company.Route.PL.ViewModels
@model List<UsersInRoleViewModel>
@{
    ViewData["Title"] = "AddOrRemoveUser";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var RoleId = ViewData["RoleId"] as string;
}

<h1>Add Or Remove User</h1>

<form asp-controller="Role" asp-action="AddOrRemoveUser" asp-route-roleId="@RoleId">

    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-group">
            <input asp-for="@Model[i].IsSelected" />
            <label asp-for="@Model[i].IsSelected"> @Model[i].UserName </label>
        </div>


        <input type="hidden" asp-for="@Model[i].UserName" />
        <input type="hidden" asp-for="@Model[i].UserId" />

    }
    <input type="submit" value="Save Changes" class="btn btn-success" />
    <a asp-action="Update" asp-route-id="@RoleId" class="btn btn-danger">Cancel</a>
</form>