@using Company.Route.PL.ViewModels
@model IEnumerable<RoleViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>
    All Roles
</h1>
<br />
<br />

<form asp-action="Index">
    <div class="row m-5">
        <div class="col-8">
            <input type="text" name="WordSearch" id="WordSearch" placeholder="Seach By Name..." class="form-control" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search"  class="btn btn-success" />
        </div>
    </div>

</form>


<a asp-controller="Role" asp-action="Create" class="btn btn-primary">Create Role</a>
<br />
<br />

@if(Model.Count() > 0 )
{
    <br />
    <table class="table table-striped table-hover">
        <thead>
        <th>@Html.DisplayNameFor(D => D.Id)</th>
        <th>@Html.DisplayNameFor(D => D.RoleName)</th>
        <th>Details</th>
        <th>Update</th>
        <th>Delete</th>
        </thead>

        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.RoleName</td>

                    <td>
                        <a asp-action="Details" asp-route-id="@role.Id" class="btn btn-warning">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-id="@role.Id" class="btn btn-success">
                            <i class="fas fa-eye"></i> Update
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-danger">
                            <i class="fas fa-eye"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <br />
    <div class="alert alert-danger">
        <h3>
            There are no Roles!
        </h3>
    </div>
}


